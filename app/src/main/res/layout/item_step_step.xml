<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/left_container"
        android:layout_width="85dp"
        android:layout_height="60dp">

        <View
            android:id="@+id/top_line"
            android:layout_width="2dp"
            android:layout_height="18dp"
            android:layout_centerHorizontal="true"
            android:background="#dbdbdb"/>

        <ImageView
            android:scaleType="fitCenter"
            android:id="@+id/img_action"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/top_line"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:src="@drawable/icon_turn_left_40"/>

        <View
            android:id="@+id/arrive_line"
            android:layout_width="2dp"
            android:layout_height="42dp"
            android:layout_below="@id/top_line"
            android:layout_centerHorizontal="true"
            android:background="#dbdbdb"
            android:visibility="gone"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/left_container"
        android:textSize="16sp"
        tools:text="10"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/count"
        android:layout_toRightOf="@id/count"
        android:text="米后,"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/count"
        android:layout_toRightOf="@id/text"
        android:textColor="@color/primary"
        android:textSize="16sp"
        tools:text="左转"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/count"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="14dp"
        android:background="@color/list_item_divider"/>


</RelativeLayout>